<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shadowDx="0"
        android:shadowDy="30"
        android:shadowRadius="50"
        android:orientation="vertical">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#202020"
            android:orientation="vertical"
            tools:context="vcool.thomso.in.thomso.Pronite_Day1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="DEVELOPERS"
        android:textSize="30dp"
        android:textAlignment="center"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/developers"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="6dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:id="@+id/carda"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#404040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/namenikhil"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:text="Nikhil Agrawal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/numbernikhil"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:text="+91-8755919615"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/emailnikhil"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:text="nikhilagrawa5642@gmail.com"
            android:layout_marginTop="5dp"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                >
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:onClick="githubnikhil"
                    android:id="@+id/nik_git"
                    android:layout_centerHorizontal="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/github_big_logo"
                    app:backgroundTint="@color/gold" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:onClick="facebooknikhil"
                    android:layout_toLeftOf="@id/nik_git"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/facebook_logo"
                    app:backgroundTint="@color/gold" />
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:onClick="linkedinnikhil"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                     android:layout_toRightOf="@id/nik_git"
                    android:src="@drawable/logo_linkedin"
                     app:backgroundTint="@color/gold" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:background="#B0BEC5"
        app:cardCornerRadius="3dp"
        app:cardElevation="6dp"

        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#404040"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/namenkanishk"
                android:layout_marginTop="20dp"
                android:text="Kanishk Khandelwal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/numberkanishk"
                android:text="+91-9529118708"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/emailkanishk"
                android:text="kanishkkhandelwal1998@gmail.com"
                android:layout_marginTop="5dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                >
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:onClick="githubkanishk"
                    android:id="@+id/kk_git"
                    android:layout_centerHorizontal="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/github_big_logo"
                    app:backgroundTint="@color/gold" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:onClick="facebookkanishk"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@id/kk_git"
                    android:layout_height="match_parent"
                    android:src="@drawable/facebook_logo"
                    app:backgroundTint="@color/gold" />
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@id/kk_git"
                    android:onClick="linkedinkanishk"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_linkedin"
                    app:backgroundTint="@color/gold" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>


        </ScrollView>


    </LinearLayout>


    </RelativeLayout>