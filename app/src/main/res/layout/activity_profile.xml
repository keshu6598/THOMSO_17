<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="-24dp"
            android:scaleType="centerCrop"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            app:civ_border_color="#c59b5f"
            />

        <RelativeLayout
            android:background="@color/gold"
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:backgroundTint="#404040"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:elevation="4dp"
            android:paddingBottom="24dp">



            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_profile_id"
                android:layout_margin="5dp"
                android:background="#404040"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:textColor="#ffffff"
                 />

            <TextView
                android:id="@+id/user_profile_college"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:background="#404040"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textColor="#ffffff"
                android:padding="20dp"
                 />

            <TextView
                android:id="@+id/user_profile_mob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#404040"
                android:layout_margin="5dp"
                android:clickable="true"
                android:textColor="#ffffff"
                android:elevation="4dp"
                android:padding="20dp"
                />
            <TextView
                android:id="@+id/user_profile_event"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#404040"
                android:layout_margin="5dp"
                android:clickable="true"
                android:textColor="#ffffff"
                android:elevation="4dp"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/user_profile_gender"
                android:layout_width="fill_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#404040"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                 />

            <TextView
                android:id="@+id/user_profile_address"
                android:layout_width="fill_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#404040"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                 />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>