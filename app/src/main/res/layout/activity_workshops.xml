<?xml version="1.0" encoding="utf-8"?>
<com.mxn.soul.flowingdrawer_core.FlowingDrawer
    android:id="@+id/flowing_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:edPosition="1"
    app:edMenuSize="260dp"
    app:edMenuBackground="@color/gold_shadow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="@color/grey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            tools:context="vcool.thomso.in.thomso.Workshops">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/c_0"
                    android:layout_height="wrap_content"
                    android:text="WORKSHOPS"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:paddingTop="20dp"
                    android:textStyle="bold"
                    />
                <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:background="#404040"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#404040"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:weightSum="7"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#FFFFFF"
                                android:scaleType="fitXY"
                                >

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:src="@drawable/ethical"
                                    android:scaleType="fitXY"
                                    /></LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ETHICAL HACKING"
                                    android:id="@+id/c_1"
                                    android:layout_marginTop="10dp"
                                    android:textSize="17dp"
                                    android:textColor="#FFFFFF"
                                    android:textAlignment="center"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PAY NOW"
                                    android:id="@+id/t_1"

                                    android:layout_marginTop="15dp"
                                    android:onClick="paynow"
                                    android:textStyle="bold"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/t_2"
                                    android:text="RULE BOOK"
                                    android:layout_marginTop=".7dp"
                                    android:onClick="rulebookethical"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:background="#404040"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#404040"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:weightSum="7"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#FFFFFF"
                                android:scaleType="fitXY"
                                >

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:src="@drawable/robot"
                                    android:scaleType="fitXY"
                                    /></LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ROBOTICS with IOT"
                                    android:id="@+id/c_2"
                                    android:layout_marginTop="10dp"
                                    android:textSize="17dp"
                                    android:textColor="#FFFFFF"
                                    android:textAlignment="center"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PAY NOW"
                                    android:id="@+id/t_3"

                                    android:layout_marginTop="15dp"
                                    android:onClick="paynow"
                                    android:textStyle="bold"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="RULE BOOK"
                                    android:layout_marginTop=".7dp"
                                    android:id="@+id/t_4"
                                    android:onClick="rulebookrobot"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:background="#404040"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#404040"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:orientation="horizontal"
                            android:weightSum="7"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#FFFFFF"
                                android:scaleType="fitXY"
                                >

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:src="@drawable/engine"
                                    android:scaleType="fitXY"
                                    /></LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="AUTOMOBILE and IC ENGINE"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/c_3"
                                    android:textSize="17dp"
                                    android:textColor="#FFFFFF"
                                    android:textAlignment="center"
                                    />
                                <Button
                                    android:id="@+id/t_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PAY NOW"
                                    android:layout_marginTop="15dp"
                                    android:onClick="paynow"
                                    android:textStyle="bold"
                                    />
                                <Button
                                    android:id="@+id/t_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="RULE BOOK"
                                    android:layout_marginTop=".7dp"
                                    android:onClick="rulebookengine"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:background="#404040"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#404040"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:orientation="horizontal"
                            android:weightSum="7"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#FFFFFF"
                                android:scaleType="fitXY"
                                >

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:src="@drawable/app"
                                    android:scaleType="fitXY"
                                    /></LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ANDROID APP DEVELOPMENT"
                                    android:id="@+id/c_4"
                                    android:layout_marginTop="10dp"
                                    android:textSize="17dp"
                                    android:textColor="#FFFFFF"
                                    android:textAlignment="center"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PAY NOW"
                                    android:id="@+id/t_7"
                                    android:layout_marginTop="15dp"
                                    android:onClick="paynow"
                                    android:textStyle="bold"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="RULE BOOK"
                                    android:id="@+id/t_8"
                                    android:layout_marginTop=".7dp"
                                    android:onClick="rulebookapp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:background="#404040"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#404040"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:weightSum="7"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#FFFFFF"
                                android:scaleType="fitXY"
                                >

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:src="@drawable/marketing"
                                    android:scaleType="fitXY"
                                    /></LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DIGITAL MARKETING"
                                    android:layout_marginTop="10dp"
                                    android:textSize="17dp"
                                    android:id="@+id/c_5"
                                    android:textColor="#FFFFFF"
                                    android:textAlignment="center"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PAY NOW"
                                    android:id="@+id/t_9"

                                    android:layout_marginTop="15dp"
                                    android:onClick="paynow"
                                    android:textStyle="bold"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/t_10"
                                    android:text="RULE BOOK"
                                    android:layout_marginTop=".7dp"
                                    android:onClick="rulebookmarket"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
             </LinearLayout>

        </ScrollView></LinearLayout>

    <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
        android:id="@+id/flowing_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@color/colorAccent"
            android:id="@+id/container_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>
</com.mxn.soul.flowingdrawer_core.FlowingDrawer>