<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:background="#202020"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@drawable/scroll_bar"
            android:scrollbarSize="2dp"
            android:orientation="vertical"
            tools:context="vcool.thomso.in.thomso.Pronite_Day1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_height="100dp"
                    android:gravity="center"
                    >

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/event_overview_name"
                        android:singleLine="true"
                        android:textSize="40sp"
                        autofit:minTextSize="16sp"
                        android:maxLines="1"
                        android:textColor="#FFFFFFFF"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/event_overview_descr"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="19dp"
                   />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/event_overview_time"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_overview_coord"
                    android:layout_marginLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/event_overview_coord_no"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/event_overview_location"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_arc_menu_1"
            android:layout_width="wrap_content"
            android:onClick="openCallLog"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/fab_arc_menu_2"
             android:src="@android:drawable/stat_sys_phone_call"
            app:backgroundTint="#0fb33d" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_arc_menu_2"
            android:layout_width="wrap_content"
            android:onClick="openGoogleMaps"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_map"
            app:backgroundTint="#01579B" />

        <!--</com.sa90.materialarcmenu.ArcMenu>-->
</RelativeLayout>
